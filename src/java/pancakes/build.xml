<?xml version="1.0"?>
<project name="pancakes" default="archive">
    <target name="init">
        <mkdir dir="build/classes"/>
        <mkdir dir="dist"/>
    </target>

    <target name="compile" depends="init">
        <javac includeantruntime="false" srcdir="src" destdir="build/classes"/>
    </target>

    <target name="archive" depends="compile">
        <jar destfile="dist/pancakes.jar" basedir="build/classes"/>
    </target>

    <target name="clean" depends="init">
        <delete dir="build"/>
        <delete dir="dist"/>
    </target>
</project>

